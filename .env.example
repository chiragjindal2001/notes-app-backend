# Application
APP_NAME="PHP Backend Starter"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# JWT Authentication
JWT_SECRET=your_secure_jwt_secret_here
JWT_ISSUER=php-backend-starter
JWT_AUDIENCE=php-backend-audience
JWT_EXPIRATION=2592000  # 30 days in seconds

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://civilstudies.vercel.app/auth/callback

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://civilstudies.vercel.app
